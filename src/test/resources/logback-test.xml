<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration scan="true" scanPeriod="30 seconds" >
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <version/>
                <pattern>
                    <pattern>{"message": "#tryJson{%message}"}</pattern>
                </pattern>
                <loggerName/>
                <threadName/>
                <logLevel/>
                <stackTrace/>
                <mdc/>
                <pattern>
                    <omitEmptyFields>true</omitEmptyFields>
                    <pattern>
                        {
                        "PNApplicationMetrics": "#asJson{%mdc{PNApplicationMetrics}}",
                        "_aws": "#asJson{%mdc{_aws}}"
                        }
                    </pattern>
                </pattern>
                <arguments/>
                <logstashMarkers/>
                <logLevelValue/>
            </providers>
        </encoder>
    </appender>
    <logger name="it.pagopa.pn.commons.pnclients.RestTemplateRetryable" level="INFO" />
    <logger name="it.pagopa.pn" level="TRACE" />
    <root level="TRACE">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>