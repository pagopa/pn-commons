<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%X{trace_id}] %highlight(%-5level) - %-4relative - [%thread] - %cyan(%logger{20}) - %msg %n</pattern>
        </encoder>
    </appender>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/efs/${MICROSERVICE_NAME:-msservicename}/${TASK_ID:-local}/logs/http.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/efs/${MICROSERVICE_NAME:-msservicename}/${TASK_ID:-local}/logs/http.%d{yyyy-MM-dd_HH}.%i.log.zip</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>200MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>${MAX_HISTORY_LOGBACK:-30}</maxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M - %msg%n
            </Pattern>
        </encoder>
    </appender>
    <logger name="org.apache.http" additivity="false" level="TRACE">
        <appender-ref ref="file"/>
    </logger>
    <logger name="reactor.netty.http.client.HttpClient" additivity="false" level="TRACE">
        <appender-ref ref="file"/>
    </logger>
    <logger name="httpclient.wire" additivity="false" level="TRACE">
        <appender-ref ref="file"/>
    </logger>
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="it.pagopa.pn" level="DEBUG" />
</configuration>
